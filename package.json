{
  "name": "simple-ldap-search",
  "description": "Simple LDAP Searching.",
  "main": "dist/index.js",
  "version": "2.0.3",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "rm -rf dist && mkdir dist",
    "build": "babel src --out-dir dist",
    "start": "nodemon ./src/index.js --exec babel-node -- --use_strict",
    "test:server": "nodemon ./test/ldap-server --exec babel-node --",
    "clean": "rm -rf dist && rm -rf coverage",
    "eslint": "eslint src",
    "test": "ava --verbose",
    "deps:check:updates": "ncu",
    "deps:upgrade": "ncu -u",
    "deps:check:security": "nsp check",
    "test:watch": "ava --verbose --watch test",
    "prepublish": "npm run build",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "yolo": "npm run commit && git push"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jxjj/simple-ldap-search.git"
  },
  "author": "James Johnson",
  "license": "MIT",
  "devDependencies": {
    "ava": "^0.23.0",
    "babel-cli": "^6.3.15",
    "babel-core": "^6.2.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.3.13",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "commitizen": "^2.4.6",
    "concat-stream": "^1.5.1",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.11.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "ghooks": "^2.0.0",
    "nodemon": "^1.12.1",
    "np": "^2.17.0",
    "npm-check-updates": "^2.13.0",
    "nsp": "^3.1.0",
    "prettier-eslint": "^8.2.2",
    "semantic-release": "^8.2.3",
    "validate-commit-message": "^3.0.1"
  },
  "dependencies": {
    "babel-runtime": "^6.23.0",
    "bluebird": "^3.5.1",
    "ldapjs": "^1.0.0",
    "lodash": "^4.13.1"
  },
  "config": {
    "ghooks": {
      "commit-msg": "validate-commit-msg && npm run eslint && npm t"
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "ava": {
    "require": [
      "babel-register",
      "babel-polyfill"
    ],
    "babel": "inherit"
  },
  "babel": {
    "presets": [
      "env"
    ],
    "plugins": [
      [
        "transform-runtime",
        {
          "helpers": false,
          "polyfill": false,
          "regenerator": true,
          "moduleName": "babel-runtime"
        }
      ]
    ]
  }
}
