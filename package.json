{
  "name": "simple-ldap-get",
  "description": "Simple LDAP queries.",
  "main": "dist/index.js",
  "version": "1.1.3",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "rm -rf dist && mkdir dist",
    "build": "babel src/index.js -o dist/index.js",
    "start": "nodemon ./src/index.js --exec babel-node -- --use_strict",
    "test:server": "nodemon ./test/ldap-server --exec babel-node --",
    "commit": "git-cz",
    "clean": "rm -rf dist && rm -rf coverage",
    "eslint": "eslint src",
    "test": "mocha test/*.test.js --compilers js:babel-core/register",
    "test:watch": "mocha -w test/*.test.js --compilers js:babel-core/register",
    "test:watch:single": "mocha -w --compilers js:babel-core/register",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "yolo": "npm run commit && git push"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mcadonline/simple-ldap-get.git"
  },
  "author": "James Johnson",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.3.15",
    "babel-core": "^6.2.1",
    "babel-preset-es2015": "^6.1.18",
    "babel-preset-stage-2": "^6.3.13",
    "babel-register": "^6.3.13",
    "chai": "^3.4.1",
    "chai-as-promised": "^6.0.0",
    "commitizen": "^2.4.6",
    "concat-stream": "^1.5.1",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^3.1.0",
    "eslint-config-airbnb-base": "^11.1.3",
    "eslint-plugin-import": "^2.2.0",
    "ghooks": "^2.0.0",
    "mocha": "^3.2.0",
    "nodemon": "^1.8.1",
    "semantic-release": "^6.3.2",
    "through2": "^2.0.1",
    "validate-commit-message": "^3.0.1"
  },
  "dependencies": {
    "bluebird": "^3.0.6",
    "emit-stream": "^0.1.2",
    "ldapjs": "^1.0.0",
    "lodash": "^4.13.1"
  },
  "config": {
    "ghooks": {
      "commit-msg": "validate-commit-msg && npm run eslint && npm t"
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
