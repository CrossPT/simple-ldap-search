{
  "name": "simple-ldap-search",
  "description": "Simple LDAP Searching.",
  "main": "dist/index.js",
  "version": "0.0.0-development",
  "files": ["dist"],
  "scripts": {
    "prebuild": "rm -rf dist && mkdir dist",
    "build": "babel src --out-dir dist",
    "start": "nodemon ./src/index.js --exec babel-node -- --use_strict",
    "test:server": "nodemon ./test/ldap-server --exec babel-node --",
    "commit": "git-cz",
    "clean": "rm -rf dist && rm -rf coverage",
    "eslint": "eslint src",
    "test": "ava --verbose",
    "check:updates": "ncu",
    "check:security": "nsp check",
    "test:watch": "ava --verbose --watch test",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "yolo": "npm run commit && git push"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jxjj/simple-ldap-search.git"
  },
  "author": "James Johnson",
  "license": "MIT",
  "devDependencies": {
    "ava": "^0.22.0",
    "babel-cli": "^6.3.15",
    "babel-core": "^6.2.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.4.0",
    "babel-register": "^6.3.13",
    "chai": "^4.1.1",
    "chai-as-promised": "^7.1.1",
    "commitizen": "^2.4.6",
    "concat-stream": "^1.5.1",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^4.5.0",
    "eslint-config-airbnb-base": "^11.1.3",
    "eslint-plugin-import": "^2.2.0",
    "ghooks": "^2.0.0",
    "nodemon": "^1.8.1",
    "npm-check-updates": "^2.12.1",
    "nsp": "^2.7.0",
    "prettier-eslint": "^6.4.2",
    "semantic-release": "^7.0.2",
    "validate-commit-message": "^3.0.1"
  },
  "dependencies": {
    "babel-runtime": "^6.23.0",
    "bluebird": "^3.0.6",
    "ldapjs": "^1.0.0",
    "lodash": "^4.13.1"
  },
  "config": {
    "ghooks": {
      "commit-msg": "validate-commit-msg && npm run eslint && npm t"
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "ava": {
    "require": ["babel-register", "babel-polyfill"],
    "babel": "inherit"
  },
  "babel": {
    "presets": ["env"],
    "plugins": [
      [
        "transform-runtime",
        {
          "helpers": false,
          "polyfill": false,
          "regenerator": true,
          "moduleName": "babel-runtime"
        }
      ]
    ]
  }
}
