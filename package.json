{
  "name": "simple-ldap-search",
  "description": "Simple LDAP Searching.",
  "main": "dist/index.js",
  "version": "2.0.4",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "rm -rf dist && mkdir dist",
    "build": "babel src --out-dir dist",
    "start": "nodemon ./src/index.js --exec babel-node -- --use_strict",
    "test:server": "nodemon ./test/ldap-server --exec babel-node --",
    "clean": "rm -rf dist && rm -rf coverage",
    "eslint": "eslint src",
    "test": "ava --verbose",
    "deps:check": "ncu",
    "deps:upgrade": "ncu -ua",
    "deps:security": "nsp check",
    "test:watch": "ava --verbose --watch test",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jxjj/simple-ldap-search.git"
  },
  "author": "James Johnson",
  "license": "MIT",
  "devDependencies": {
    "ava": "^0.25.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "concat-stream": "^1.6.1",
    "eslint": "^4.18.2",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.9.0",
    "nodemon": "^1.17.1",
    "np": "^2.20.1",
    "npm-check-updates": "^3.0.0-alpha2",
    "nsp": "^3.2.1",
    "p-map": "^1.2.0",
    "prettier-eslint": "^8.8.1"
  },
  "dependencies": {
    "babel-runtime": "^6.26.0",
    "ldapjs": "^1.0.2",
    "lodash": "^4.17.5"
  },
  "ava": {
    "require": [
      "babel-register",
      "babel-polyfill"
    ],
    "babel": "inherit"
  },
  "babel": {
    "presets": [
      "env"
    ],
    "plugins": [
      [
        "transform-runtime",
        {
          "helpers": false,
          "polyfill": false,
          "regenerator": true,
          "moduleName": "babel-runtime"
        }
      ]
    ]
  }
}
